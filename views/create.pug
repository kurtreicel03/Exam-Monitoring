extends base
block content
 include _header
 .container.create-form
  if success_msg != ''
      .alert.alert-success.alert-dismissible.fade.show(role='alert')
        p=success_msg
        button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
  if error_msg != ''
      .alert.alert-danger.alert-dismissible.fade.show(role='alert')
        p=error_msg
        button.btn-close(type='button' data-bs-dismiss='alert' aria-label='Close')
      
  .container.p-0.mb-2
    h1 Create Report    
  form.report-form(action="/create", method="POST")
   .row
    .col.mb-3
        label(for="title") Title
        input#title.form-control(type="text", name="title" placeholder="INPUT TITLE HERE")
    .col.mb-3
        label(for="student-level") Student Level
        select.form-select#student-level(name="level")
          option(value="" selected) select level 
          option(value="Grade 1") Grade 1
          option(value="Grade 2") Grade 2
          option(value="Grade 3") Grade 3
          option(value="Grade 4") Grade 4
          option(value="Grade 5") Grade 5
          option(value="Grade 6") Grade 6
          option(value="Grade 7") Grade 7
          option(value="Grade 8") Grade 8
          option(value="Grade 9") Grade 9
          option(value="Grade 10") Grade 10
          option(value="Grade 11") Grade 11
          option(value="Grade 12") Grade 12
          option(value="1st yr College") 1st yr College
          option(value="2nd yr College") 2nd yr College
          option(value="3rd yr College") 3rd yr College
          option(value="4th yr College") 4th yr College
          option(value="5th yr College") 5th yr College
           
    .col.mb-3
          label(for="subject") Subject
          input#subject.form-control(type="text", name="subject" placeholder="ex: English 101") 
   .mb-3       
    label(for="description") Description
    textarea#description.form-control(type="text", name="description" placeholder="Report description")
  
   button.btn.btn-outline-success#add-table.m-1
    i.fas.fa-plus  
   button.btn.btn-outline-success#remove-table.m-1
    i.fas.fa-minus  
   table.table.table-bordered
    thead
      tr
       th(scope='col') QUESTION CATEGORY
       th(scope='col') TOTAL CORRECT
       th(scope='col') TOTAL ERROR
    tbody
      tr
       td 
        input.form-control.category(type="text" name="category") 
       td
        input.form-control.correct(type="number" name="correct") 
       td 
        input.form-control.wrong(type="number" name="wrong")
   .text-center     
    button.btn.btn-outline-success.create-report(type="submit") create report

 include logout
